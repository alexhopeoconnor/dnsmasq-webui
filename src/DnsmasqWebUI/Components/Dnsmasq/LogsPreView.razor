<pre id="@Id" class="pre-block mb-0" style="max-height: 24rem;">@Placeholder</pre>

@code {
    [Parameter] public string Id { get; set; } = "";
    [Parameter] public string Placeholder { get; set; } = "Connectingâ€¦";
    [Parameter] public bool Freeze { get; set; }

    protected override bool ShouldRender() => !Freeze;
}
