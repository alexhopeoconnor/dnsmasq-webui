@namespace DnsmasqWebUI.Components.Modals
@implements IAsyncDisposable
@inject IJSRuntime JSRuntime
@inject IClientSettingsService ClientSettingsService
@inject ILogger<SettingsModal> Logger

@if (IsVisible)
{
    <dialog @ref="_dialogRef" class="settings-modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" @onclick="Close" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (_validationErrors.Count > 0)
                {
                    <div class="alert alert-danger mb-3" role="alert">
                        <strong>Please fix the following:</strong>
                        <ul class="mb-0 mt-1">
                            @foreach (var err in _validationErrors)
                            {
                                <li>@err</li>
                            }
                        </ul>
                    </div>
                }
                @if (SettingsContext == SettingsModalContext.All)
                {
                    <div class="mb-3">
                        <label class="form-label">Search settings</label>
                        <input type="search" class="form-control" placeholder="Search..." autocomplete="off"
                               @bind="_searchTerm" @bind:event="oninput" @bind:after="FilterSettings" />
                    </div>
                }
                @if (ShouldShowSection(SettingsModalSections.ServiceStatus))
                {
                    var meta = SettingsModalSections.All[SettingsModalSections.ServiceStatus];
                    <section class="mb-4">
                        <h6 class="text-muted">@meta.DisplayName</h6>
                        <label for="status-interval" class="form-label">@meta.FieldLabel</label>
                        <input id="status-interval" type="number" class="form-control" min="@ClientSettingsFields.ServiceStatusPollingInterval.Min" max="@ClientSettingsFields.ServiceStatusPollingInterval.Max" step="1"
                               @bind="_editingSettings.ServiceStatusPollingIntervalSeconds" />
                    </section>
                }
                @if (ShouldShowSection(SettingsModalSections.Logs))
                {
                    var meta = SettingsModalSections.All[SettingsModalSections.Logs];
                    <section class="mb-4">
                        <h6 class="text-muted">@meta.DisplayName</h6>
                        <label for="logs-interval" class="form-label">@meta.FieldLabel</label>
                        <input id="logs-interval" type="number" class="form-control" min="@ClientSettingsFields.RecentLogsPollingInterval.Min" max="@ClientSettingsFields.RecentLogsPollingInterval.Max" step="1"
                               @bind="_editingSettings.RecentLogsPollingIntervalSeconds" />
                    </section>
                }
                @if (ShouldShowSection(SettingsModalSections.AppLogs))
                {
                    var meta = SettingsModalSections.All[SettingsModalSections.AppLogs];
                    <section class="mb-4">
                        <h6 class="text-muted">@meta.DisplayName</h6>
                        <label for="app-logs-interval" class="form-label">@meta.FieldLabel</label>
                        <input id="app-logs-interval" type="number" class="form-control" min="@ClientSettingsFields.AppLogsPollingInterval.Min" max="@ClientSettingsFields.AppLogsPollingInterval.Max" step="1"
                               @bind="_editingSettings.AppLogsPollingIntervalSeconds" />
                    </section>
                }
                @if (ShouldShowSection(SettingsModalSections.Leases))
                {
                    var meta = SettingsModalSections.All[SettingsModalSections.Leases];
                    <section class="mb-4">
                        <h6 class="text-muted">@meta.DisplayName</h6>
                        <label for="leases-interval" class="form-label">@meta.FieldLabel</label>
                        <input id="leases-interval" type="number" class="form-control" min="@ClientSettingsFields.LeasesPollingInterval.Min" max="@ClientSettingsFields.LeasesPollingInterval.Max" step="1"
                               @bind="_editingSettings.LeasesPollingIntervalSeconds" />
                    </section>
                }
                @if (ShouldShowSection(SettingsModalSections.RecentLogsDisplay))
                {
                    var meta = SettingsModalSections.All[SettingsModalSections.RecentLogsDisplay];
                    <section class="mb-4">
                        <h6 class="text-muted">@meta.DisplayName</h6>
                        <div class="mb-2">
                            <label for="recent-logs-max-lines" class="form-label">Max lines</label>
                            <input id="recent-logs-max-lines" type="number" class="form-control" min="@ClientSettingsFields.RecentLogsMaxLines.Min" max="@ClientSettingsFields.RecentLogsMaxLines.Max" step="1"
                                   @bind="_editingSettings.RecentLogsMaxLines" />
                        </div>
                        <div class="form-check">
                            <input id="recent-logs-auto-scroll" type="checkbox" class="form-check-input" @bind="_editingSettings.RecentLogsAutoScroll" />
                            <label for="recent-logs-auto-scroll" class="form-check-label">Auto-scroll when new logs arrive</label>
                        </div>
                    </section>
                }
                @if (ShouldShowSection(SettingsModalSections.AppLogsDisplay))
                {
                    var meta = SettingsModalSections.All[SettingsModalSections.AppLogsDisplay];
                    <section class="mb-4">
                        <h6 class="text-muted">@meta.DisplayName</h6>
                        <div class="mb-2">
                            <label for="app-logs-max-lines" class="form-label">Max lines</label>
                            <input id="app-logs-max-lines" type="number" class="form-control" min="@ClientSettingsFields.AppLogsMaxLines.Min" max="@ClientSettingsFields.AppLogsMaxLines.Max" step="1"
                                   @bind="_editingSettings.AppLogsMaxLines" />
                        </div>
                        <div class="form-check">
                            <input id="app-logs-auto-scroll" type="checkbox" class="form-check-input" @bind="_editingSettings.AppLogsAutoScroll" />
                            <label for="app-logs-auto-scroll" class="form-check-label">Auto-scroll when new logs arrive</label>
                        </div>
                    </section>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="Save">Save</button>
            </div>
        </div>
    </dialog>
}
