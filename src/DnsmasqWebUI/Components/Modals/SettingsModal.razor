@namespace DnsmasqWebUI.Components.Modals
@implements IAsyncDisposable
@inject IJSRuntime JSRuntime
@inject IClientSettingsService ClientSettingsService

@if (IsVisible)
{
    <dialog @ref="_dialogRef" class="settings-modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="btn-close" @onclick="Close" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (SettingsContext == SettingsModalContext.All)
                {
                    <div class="mb-3">
                        <label class="form-label">Search settings</label>
                        <input type="search" class="form-control" placeholder="Search..." autocomplete="off"
                               @bind="_searchTerm" @bind:event="oninput" @bind:after="FilterSettings" />
                    </div>
                }
                @if (ShouldShowSection(SettingsModalSections.ServiceStatus))
                {
                    var meta = SettingsModalSections.All[SettingsModalSections.ServiceStatus];
                    <section class="mb-4">
                        <h6 class="text-muted">@meta.DisplayName</h6>
                        <label for="status-interval" class="form-label">@meta.FieldLabel</label>
                        <input id="status-interval" type="number" class="form-control" min="5" step="1"
                               @bind="_editingSettings.ServiceStatusPollingIntervalSeconds" />
                    </section>
                }
                @if (ShouldShowSection(SettingsModalSections.Logs))
                {
                    var meta = SettingsModalSections.All[SettingsModalSections.Logs];
                    <section class="mb-4">
                        <h6 class="text-muted">@meta.DisplayName</h6>
                        <label for="logs-interval" class="form-label">@meta.FieldLabel</label>
                        <input id="logs-interval" type="number" class="form-control" min="5" step="1"
                               @bind="_editingSettings.RecentLogsPollingIntervalSeconds" />
                    </section>
                }
                @if (ShouldShowSection(SettingsModalSections.Leases))
                {
                    var meta = SettingsModalSections.All[SettingsModalSections.Leases];
                    <section class="mb-4">
                        <h6 class="text-muted">@meta.DisplayName</h6>
                        <label for="leases-interval" class="form-label">@meta.FieldLabel</label>
                        <input id="leases-interval" type="number" class="form-control" min="5" step="1"
                               @bind="_editingSettings.LeasesPollingIntervalSeconds" />
                    </section>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" @onclick="Close">Cancel</button>
                <button type="button" class="btn btn-primary" @onclick="Save">Save</button>
            </div>
        </div>
    </dialog>
}
