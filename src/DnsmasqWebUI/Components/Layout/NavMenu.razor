@namespace DnsmasqWebUI.Components.Layout
@inject IOptions<ApplicationOptions> AppOptions
@inject ISettingsModalService SettingsModalService

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid d-flex align-items-center">
        <a class="navbar-brand d-flex align-items-center gap-2" href="" aria-label="@AppTitle home">
            <span class="brand-logo-wrap"><img src="logo.webp" alt="" class="brand-logo" /></span>
            <span>@AppTitle</span>
        </a>
        <button type="button" class="nav-settings-btn" aria-label="Settings" title="Settings" @onclick="OpenAllSettings">
            <i class="bi bi-gear-fill" aria-hidden="true"></i>
        </button>
    </div>
    <input type="checkbox" title="Navigation menu" class="navbar-toggler" id="nav-toggler" aria-label="Toggle navigation" />
</div>

<div class="nav-scrollable" onclick="document.getElementById('nav-toggler')?.click()">
    <nav class="nav flex-column" aria-label="Main navigation">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="bi bi-house-door-fill nav-icon" aria-hidden="true"></i> Dnsmasq
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="hosts">
                <i class="bi bi-list-nested nav-icon" aria-hidden="true"></i> Hosts
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dhcp">
                <i class="bi bi-hdd-network nav-icon" aria-hidden="true"></i> DHCP
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private string? AppTitle => AppOptions?.Value?.EffectiveTitle;

    private void OpenAllSettings() => SettingsModalService.Open(SettingsModalContext.All, "Settings");
}
