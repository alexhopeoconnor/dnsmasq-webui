@inherits LayoutComponentBase
@namespace DnsmasqWebUI.Components.Layout
@inject ISettingsModalService SettingsModalService
@implements IDisposable

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>
    <main class="main">
        <div class="content-wrapper">
            <article class="content">
                @Body
            </article>
        </div>
    </main>
</div>

<SettingsModal IsVisible="_settingsModalOpen" Title="@_settingsModalTitle" SettingsContext="_settingsModalContext" OnClose="CloseSettingsModal" />

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss" aria-label="Dismiss">Ã—</span>
</div>

@code {
    private bool _settingsModalOpen;
    private string _settingsModalTitle = "Settings";
    private SettingsModalContext _settingsModalContext = SettingsModalContext.All;

    protected override void OnInitialized()
    {
        SettingsModalService.OpenRequested += OnSettingsOpenRequested;
    }

    private void OnSettingsOpenRequested(SettingsModalContext context, string title)
    {
        _settingsModalContext = context;
        _settingsModalTitle = title;
        _settingsModalOpen = true;
        StateHasChanged();
    }

    private async Task CloseSettingsModal()
    {
        _settingsModalOpen = false;
        SettingsModalService.NotifySettingsChanged();
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        SettingsModalService.OpenRequested -= OnSettingsOpenRequested;
    }
}
